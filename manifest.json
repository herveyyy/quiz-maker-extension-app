{
    "name": "Silid Quiz Maker",
    "description": "Chrome extension prototype for testing capabilities with Silid LMS integration.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Open Silid Quickies"
    },
    "side_panel": {
        "default_path": "dist/index.html"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "cookies",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "optional_permissions": [],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"],
            "run_at": "document_end"
        }
    ]
}
